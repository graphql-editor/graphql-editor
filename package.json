{
  "name": "graphql-editor-monorepo",
  "version": "5.5.8",
  "private": false,
  "license": "MIT",
  "description": "Visual node editor for GraphQL",
  "homepage": "https://graphqleditor.com",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "updatedeps": "npm i -w graphql-editor graphql-zeus@latest graphsource@latest",
    "lint": "eslint \"./src/**/*.{ts,js}\" --quiet --fix && prettier --write \"./src/**/*.{ts,js}\" ",
    "run-all": "concurrently \"npm run start -w graphql-editor-worker\" \"npm run start -w graphql-editor\" \"npm run start -w sandbox\" "
  },
  "resolutions": {
    "@types/react": "^16.9.11"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/graphql-editor/graphql-editor.git"
  },
  "bugs": {
    "url": "https://github.com/graphql-editor/graphql-editor.git"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@monaco-editor/react": "^4.3.1",
    "@types/classnames": "^2.3.0",
    "@types/faker": "^5.5.8",
    "@types/graphql": "^14.2.3",
    "@types/history": "4.7.9",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.9.2",
    "@types/query-string": "^6.2.0",
    "@types/react": "^17.0.21",
    "@types/react-dom": "^17.0.9",
    "@types/remarkable": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "concurrently": "^7.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.25.2",
    "husky": "^7.0.2",
    "jest": "^27.2.0",
    "mocha": "^9.1.1",
    "monaco-editor": "^0.29.1",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "treelang": "0.0.4",
    "ts-jest": "^27.0.5",
    "ttypescript": "^1.5.12",
    "typedoc": "^0.22.3",
    "typescript": "^4.4.3",
    "typescript-transform-paths": "^3.3.1"
  },
  "dependencies": {
    "@emotion/react": "^11.9.3",
    "@emotion/styled": "^11.9.3",
    "color2k": "^1.2.4",
    "fuzzyjs": "^5.0.1",
    "graphql-js-tree": "^0.1.5",
    "graphql-language-service": "^3.1.4",
    "graphsource": "^2.0.5",
    "re-resizable": "^6.9.1",
    "remarkable": "^2.0.1",
    "unstated-next": "^1.1.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "workspaces": {
    "packages": [
      "./packages/editor-worker",
      "./packages/editor",
      "./packages/sandbox"
    ]
  }
}
